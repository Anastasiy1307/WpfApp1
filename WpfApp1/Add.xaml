<Window x:Class="WpfApp1.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавить источник" Height="200" Width="300">

    <Grid Background="#E0FFFF">

        <TextBlock Height="20" Width="125"
                   Text="Название источника"
                   Margin="-150,-150,0,0"/>

        <TextBox Height="20" Width="200"
                 Margin="-75,-100,0,0"/>

        <TextBlock Height="20" Width="125"
                   Text="Адрес"
                   Margin="-147,-25,0,0"/>

        <TextBox Height="20" Width="200"
                 Margin="-75,25,0,0"/>

        <Button x:Name="Add2"
                Height="30" Width="80"
                Margin="-195,115,0,0"
                Content="Добавить"
                Background="#92D3D3"
                BorderBrush="#186C6C"/>

        <Button x:Name="Otm"
                Height="30" Width="80"
                Margin="45,115,0,0"
                Content="Отменить"
                Background="#92D3D3"
                BorderBrush="#186C6C"/>



    </Grid>
</Window>
